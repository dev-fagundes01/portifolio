generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl      = env("DIRECT_URL")
}

model Tecnologia {
  id            Int @id @default(autoincrement())
  nome          String
  descricao     String
  imagem        String
  destaque      Boolean   @default(false)
  projetos      Projeto[]

  @@map("technologies")
}

model Projeto {
  id            Int @id @default(autoincrement())
  nome          String
  descricao     String
  imagens       String[]
  nivel         Int
  tipo          String
  destaque      Boolean @default(false)
  repositorio   String
  tecnologias   Tecnologia[]

  @@map("projetos")
}